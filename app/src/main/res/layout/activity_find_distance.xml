<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindDistance"
    android:id="@+id/drawerLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="280dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layoutPadding">

            <Button
                android:id="@+id/btn_addLocation"
                android:text="Add Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/noLocationAvailable"
                android:text="No Location Available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_addLocation"
                android:layout_centerHorizontal="true"
                style="?attr/textAppearanceSubtitle2"/>

            <RelativeLayout
                android:id="@+id/locationA_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/btn_addLocation"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/locationA_txt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location A"
                    android:gravity="center_vertical"
                    style="?attr/textAppearanceSubtitle1"
                    android:textSize="14dp"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="3dp"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/viewPadding"
                    android:layout_below="@id/locationA_txt_location">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_marginRight="6dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/locationA_latitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Latitude"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_marginLeft="6dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/locationA_longitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Longitude"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/locationB_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/locationA_container"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/locationB_txt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location B"
                    android:gravity="center_vertical"
                    android:drawablePadding="3dp"
                    style="?attr/textAppearanceSubtitle1"
                    android:drawableStart="@drawable/ic_location"
                    android:textSize="14dp"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/viewPadding"
                    android:layout_below="@id/locationB_txt_location">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_marginRight="6dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/locationB_latitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Latitude"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_marginLeft="6dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/locationB_longitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Longitude"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/distance_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/locationB_container">

                <TextView
                    android:id="@+id/distance_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location A to Location B"
                    android:drawableStart="@drawable/ic_direction"
                    android:drawablePadding="3dp"
                    android:drawableTint="#EF5350"
                    android:gravity="center_vertical"
                    style="?attr/textAppearanceSubtitle1"
                    android:textSize="14dp"
                    android:layout_marginBottom="4dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_marginHorizontal="@dimen/viewPadding"
                    android:layout_below="@id/distance_txt">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Distance"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawermenu"/>
</androidx.drawerlayout.widget.DrawerLayout>
