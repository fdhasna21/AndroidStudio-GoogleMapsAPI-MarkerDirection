<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layoutPadding">

        <Button
            android:id="@+id/btn_addLocation"
            android:text="Add Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/noLocationAvailable"
            android:text="No Location Available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_addLocation"
            android:layout_centerHorizontal="true"
            style="?attr/textAppearanceSubtitle2"/>

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/recycler_location"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/btn_addLocation"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/location1_container"
            android:layout_below="@id/btn_addLocation"
            android:weightSum="4">

            <TextView
                android:id="@+id/location1_txt_Location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Location 1"
                style="?attr/textAppearanceSubtitle2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text=":"
                android:layout_marginHorizontal="@dimen/viewPadding"
                style="?attr/textAppearanceSubtitle2"/>

            <TextView
                android:id="@+id/location1_location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:text="Latitude, Longitude"
                style="?attr/textAppearanceSubtitle2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/location2_container"
            android:layout_below="@id/location1_container"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Location 2"
                style="?attr/textAppearanceSubtitle2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text=":"
                android:layout_marginHorizontal="@dimen/viewPadding"
                style="?attr/textAppearanceSubtitle2"/>

            <TextView
                android:id="@+id/location2_location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:text="Latitude, Longitude"
                style="?attr/textAppearanceSubtitle2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/distance_container"
            android:layout_below="@id/location2_container"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Distance"
                style="?attr/textAppearanceSubtitle2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text=":"
                android:layout_marginHorizontal="@dimen/viewPadding"
                style="?attr/textAppearanceSubtitle2"/>

            <TextView
                android:id="@+id/distance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:text="Distance"
                style="?attr/textAppearanceSubtitle2"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
