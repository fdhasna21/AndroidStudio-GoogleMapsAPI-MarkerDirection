<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarkLocation"
    android:id="@+id/ml_drawerLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/ml_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="280dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layoutPadding"
            android:layout_marginVertical="@dimen/viewPadding"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/ml_btn_addLocation"
                android:text="Add Location"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="@dimen/viewPadding"/>

            <Button
                android:id="@+id/ml_btn_reset"
                android:text="Reset"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/ml_btn_addLocation"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="@dimen/viewPadding"
                style="?attr/materialButtonOutlinedStyle"/>

            <ScrollView
                android:id="@+id/ml_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ml_btn_addLocation">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ml_noLocationAvailable"
                        android:text="No Location Available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        style="?attr/textAppearanceSubtitle2"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ml_llRecycler">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/ml_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="100dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/ml_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_below="@id/ml_llRecycler"
                        android:layout_marginVertical="8dp"/>

                    <RelativeLayout
                        android:id="@+id/ml_direction_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ml_divider">

                        <TextView
                            android:id="@+id/ml_distance_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance :"
                            android:drawableStart="@drawable/ic_direction"
                            android:drawablePadding="3dp"
                            android:drawableTint="#EF5350"
                            android:gravity="center_vertical"
                            style="?attr/textAppearanceSubtitle2"
                            android:textSize="14dp"
                            android:layout_marginBottom="4dp"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/ml_distanceValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="meter"
                            style="?attr/textAppearanceSubtitle1"
                            android:textSize="14dp"
                            android:layout_alignBaseline="@id/ml_distance_txt"
                            android:layout_toRightOf="@id/ml_distance_txt"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="4dp"/>

                        <Spinner
                            android:id="@+id/ml_sp_locationA"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ml_distance_txt"
                            android:spinnerMode="dropdown"
                            android:layout_alignBaseline="@id/ml_sp_to"
                            android:layout_alignParentStart="true"/>

                        <Spinner
                            android:id="@+id/ml_sp_locationB"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ml_distance_txt"
                            android:spinnerMode="dropdown"
                            android:layout_alignBaseline="@id/ml_sp_to"
                            android:layout_alignParentEnd="true"/>

                        <TextView
                            android:id="@+id/ml_sp_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="to"
                            android:gravity="center_vertical"
                            style="?attr/textAppearanceSubtitle1"
                            android:textSize="14dp"
                            android:layout_marginHorizontal="@dimen/viewPadding"
                            android:layout_marginBottom="4dp"
                            android:layout_below="@id/ml_distance_txt"
                            android:layout_toRightOf="@id/ml_sp_locationA"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/ml_navigationView"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawermenu"/>
</androidx.drawerlayout.widget.DrawerLayout>
